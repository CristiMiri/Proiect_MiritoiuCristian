                  HorizontalAlignment="Stretch"
                  SelectedItem="{Binding Path=ParticipantSelectat}"
                  ItemsSource="{Binding Path=ListaParticipanti}">
                <DataGrid.ColumnHeaderStyle>
                    <StaticResource ResourceKey="DataGridColumnHeaderStyle"/>
